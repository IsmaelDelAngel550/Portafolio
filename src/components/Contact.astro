<style>
  .contact {
    background-color: var(--background-color);
    position: relative;
  }

  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .contact-info h3 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
  }

  .contact-text {
    margin-bottom: 2.5rem;
    font-size: 1.1rem;
    color: var(--text-color);
    line-height: 1.6;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .method-icon {
    width: 3.5rem;
    height: 3.5rem;
    background-color: rgba(106, 90, 205, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .method-icon svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--primary-color);
  }

  .method-details h4 {
    color: var(--text-color);
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .method-link, .method-text {
    color: rgba(248, 248, 255, 0.8);
    font-size: 1rem;
    transition: color 0.3s ease;
  }

  .method-link:hover {
    color: var(--primary-color);
  }

  .social-links {
    display: flex;
    gap: 1.2rem;
  }

  .social-link {
    width: 2.8rem;
    height: 2.8rem;
    background-color: rgba(106, 90, 205, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background-color: var(--primary-color);
    transform: translateY(-3px);
  }

  .social-link svg {
    width: 1.2rem;
    height: 1.2rem;
    color: var(--text-color);
  }

  .contact-form-container {
    background-color: rgba(74, 59, 145, 0.1);
    border-radius: 1rem;
    padding: 2.5rem;
    border: 1px solid rgba(106, 90, 205, 0.2);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    color: var(--text-color);
    font-size: 0.9rem;
    font-weight: 500;
  }

  .form-group input, .form-group textarea {
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(106, 90, 205, 0.2);
    border-radius: 0.5rem;
    color: var(--text-color);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .form-group input:focus, .form-group textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(106, 90, 205, 0.2);
  }

  .form-group textarea {
    resize: none;
    min-height: 120px;
  }

  .submit-btn {
    padding: 1rem;
    background-color: var(--primary-color);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
  }

  .submit-btn:hover {
    background-color: var(--secondary-color);
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(106, 90, 205, 0.2);
  }

  .send-icon {
    width: 1.2rem;
    height: 1.2rem;
  }

  @media (max-width: 768px) {
    .contact-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .contact-info h3 {
      font-size: 1.8rem;
    }

    .contact-text {
      font-size: 1rem;
    }

    .method-details h4 {
      font-size: 1rem;
    }

    .method-link, .method-text {
      font-size: 0.9rem;
    }

    .contact-form-container {
      padding: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Aquí puedes agregar la lógica para enviar el formulario
        // Por ejemplo, usando fetch para enviar a un servicio de correo
        
        // Simulación de envío
        const submitBtn = form.querySelector('.submit-btn');
        const originalText = submitBtn.innerHTML;
        
        submitBtn.innerHTML = 'Enviando...';
        submitBtn.disabled = true;
        
        // Simular un retraso
        setTimeout(() => {
          // Resetear formulario
          form.reset();
          
          // Mostrar mensaje de éxito
          submitBtn.innerHTML = '¡Enviado!';
          
          // Volver al estado original después de 3 segundos
          setTimeout(() => {
            submitBtn.innerHTML = originalText;
            submitBtn.disabled = false;
          }, 3000);
        }, 1500);
      });
    }
  });
</script>
