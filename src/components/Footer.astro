<style>
  .footer {
    background: linear-gradient(135deg, 
      rgba(18, 18, 18, 0.98) 0%, 
      rgba(74, 59, 145, 0.12) 25%, 
      rgba(106, 90, 205, 0.08) 50%, 
      rgba(74, 59, 145, 0.12) 75%, 
      rgba(18, 18, 18, 0.98) 100%);
    position: relative;
    overflow: hidden;
    margin-top: 5rem;
    border-top: 1px solid rgba(106, 90, 205, 0.2);
  }
  
  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 25% 25%, rgba(106, 90, 205, 0.04) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(74, 59, 145, 0.04) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }
  
  .footer::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: repeating-conic-gradient(
      from 45deg at 50% 50%,
      transparent 0deg,
      rgba(106, 90, 205, 0.01) 2deg,
      transparent 4deg
    );
    animation: rotateFooter 80s linear infinite;
    pointer-events: none;
    z-index: 0;
  }
  
  @keyframes rotateFooter {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .container {
    position: relative;
    z-index: 1;
  }
  
  .footer-content {
    padding: 4rem 0 2rem 0;
  }
  
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }
  
  .footer-brand {
    max-width: 400px;
  }
  
  .brand-name {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .brand-subtitle {
    font-size: 1.1rem;
    color: var(--text-color);
    margin-bottom: 1rem;
    font-weight: 500;
  }
  
  .brand-description {
    color: rgba(248, 248, 255, 0.7);
    line-height: 1.6;
    font-size: 0.95rem;
  }
  
  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .link-group {
    display: flex;
    flex-direction: column;
  }
  
  .link-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 1.5rem;
    position: relative;
  }
  
  .link-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 2rem;
    height: 2px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 1px;
  }
  
  .link-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }
  
  .footer-link {
    color: rgba(248, 248, 255, 0.7);
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    position: relative;
    display: inline-block;
  }
  
  .footer-link::before {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: var(--primary-color);
    transition: width 0.3s ease;
  }
  
  .footer-link:hover {
    color: var(--primary-color);
    transform: translateX(5px);
  }
  
  .footer-link:hover::before {
    width: 100%;
  }
  
  .tech-item {
    color: rgba(248, 248, 255, 0.6);
    font-size: 0.9rem;
    position: relative;
    padding-left: 1rem;
  }
  
  .tech-item::before {
    content: '▸';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-size: 0.8rem;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .social-link {
    width: 2.5rem;
    height: 2.5rem;
