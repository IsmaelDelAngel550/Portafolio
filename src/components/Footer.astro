  .made-with {
    color: rgba(248, 248, 255, 0.6);
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }
  
  .heart-icon {
    width: 0.8rem;
    height: 0.8rem;
    color: #e74c3c;
    animation: heartbeat 2s ease-in-out infinite;
  }
  
  @keyframes heartbeat {
    0%, 50%, 100% { transform: scale(1); }
    25%, 75% { transform: scale(1.1); }
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
