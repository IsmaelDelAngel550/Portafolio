<style>
  .about {
    background: linear-gradient(135deg, 
                rgba(29, 26, 29, 0.95) 0%, 
                rgba(21, 17, 20, 0.33) 50%, 
                rgba(0, 0, 0, 0.95) 100%);
    position: relative;
    overflow: hidden;
  }

  .about-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.12;
    animation: float 15s ease-in-out infinite;
  }

  .circle-1 {
    width: 350px;
    height: 350px;
    background-color: var(--primary-color);
    top: -100px;
    right: -50px;
    animation-delay: 0s;
  }

  .circle-2 {
    width: 280px;
    height: 280px;
    background-color: var(--primary-color);
    bottom: -80px;
    left: -50px;
    animation-delay: -5s;
  }

  .circle-3 {
    width: 200px;
    height: 200px;
    background-color: var(--accent-color);
    top: 40%;
    left: 60%;
    animation-delay: -10s;
  }

  .circle-4 {
    width: 150px;
    height: 150px;
    background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
    top: 20%;
    left: 10%;
    animation-delay: -7s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1);
    }
    50% {
      transform: translateY(-20px) scale(1.05);
    }
  }

  .container {
    position: relative;
    z-index: 2;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  .about-intro {
    font-size: 1.5rem;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }

  .about-details p {
    margin-bottom: 1.2rem;
    font-size: 1.05rem;
  }

  .about-text {
    background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.08) 0%, 
                rgba(58, 52, 98, 0.05) 50%, 
                rgba(74, 59, 145, 0.08) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(56, 51, 90, 0.2);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 
      0 10px 30px rgba(0, 0, 0, 0.15),
      0 0 20px rgba(64, 57, 110, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    border-left: 4px solid var(--accent-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .about-text::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(106, 90, 205, 0.1) 0%, 
      transparent 50%, 
      rgba(74, 59, 145, 0.05) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }
  
  .about-text:hover {
    transform: translateY(-5px);
    box-shadow: 
      0 15px 40px rgba(0, 0, 0, 0.2),
      0 0 30px rgba(106, 90, 205, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.12) 0%, 
                rgba(106, 90, 205, 0.08) 50%, 
                rgba(74, 59, 145, 0.12) 100%);
    border-color: rgba(106, 90, 205, 0.3);
  }
  
  .about-text:hover::before {
    opacity: 1;
  }

  /* Estilos para las tarjetas de información */
  .about-info-container {
    background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.08) 0%, 
                rgba(106, 90, 205, 0.05) 50%, 
                rgba(74, 59, 145, 0.08) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(106, 90, 205, 0.2);
    border-radius: 16px;
    padding: 2.5rem; /* Aumentado de 2rem a 2.5rem */
    box-shadow: 
      0 10px 30px rgba(0, 0, 0, 0.15),
      0 0 20px rgba(106, 90, 205, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
    min-height: 500px; /* Altura mínima para asegurar espacio suficiente */
    width: calc(100% + 2rem); /* Hacer el contenedor 2rem más ancho */
    margin-left: -1rem; /* Centrar el contenedor expandido */
  }

  .about-info-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 30%, rgba(106, 90, 205, 0.05) 0%, transparent 50%);
    pointer-events: none;
  }

  .about-info-container:hover {
    transform: translateY(-3px);
    box-shadow: 
      0 15px 40px rgba(0, 0, 0, 0.2),
      0 0 30px rgba(106, 90, 205, 0.15);
  }

  .info-section-title {
    font-size: 1.4rem;
    color: var(--accent-color);
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
  }
  
  .info-section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 3px;
  }

  .info-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem; /* Aumentado de 1rem a 1.5rem para más espacio */
    margin-top: 1rem; /* Espacio adicional desde el título */
  }

  .info-card {
    background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.08) 0%, 
                rgba(106, 90, 205, 0.04) 100%);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(106, 90, 205, 0.15);
    border-radius: 12px;
    padding: 1.3rem; /* Aumentado de 1rem a 1.3rem para más espacio interno */
    transition: all 0.3s ease;
    border-left: 3px solid var(--accent-color);
    position: relative;
    overflow: hidden;
    /* Remover min-width para permitir flexibilidad */
  }
  
  .info-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
                transparent, 
                rgba(106, 90, 205, 0.08), 
                transparent);
    transition: left 0.5s ease;
  }
  
  .info-card:hover {
    transform: translateY(-3px);
    box-shadow: 
      0 8px 20px rgba(0, 0, 0, 0.2),
      0 0 15px rgba(106, 90, 205, 0.15);
    background: linear-gradient(135deg, 
                rgba(255, 255, 255, 0.12) 0%, 
                rgba(106, 90, 205, 0.08) 100%);
    border-color: rgba(106, 90, 205, 0.25);
  }
  
  .info-card:hover::before {
    left: 100%;
  }

  .info-card-header {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .info-icon {
    width: 24px;
    height: 24px;
    margin-right: 10px;
    color: var(--accent-color);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-icon svg {
    width: 100%;
    height: 100%;
  }

  .info-card-header h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--accent-color);
    margin: 0;
  }

  .info-card-body p {
    margin: 0;
    padding-left: 8px; /* Reducido aún más para dar más espacio al email */
    font-size: 0.9rem; /* Reducido ligeramente para que el email quepa mejor */
    word-break: normal; /* Cambiar a normal para evitar ruptura innecesaria */
    overflow-wrap: normal; /* Normal en desktop para mantener el email en una línea */
    white-space: nowrap; /* Evitar que el texto se rompa en múltiples líneas */
    overflow: hidden; /* Ocultar overflow si es necesario */
    text-overflow: ellipsis; /* Mostrar ... si el texto es muy largo */
  }

  .info-value {
    color: var(--text-color);
  }

  @media (min-width: 768px) {
    .info-cards {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.8rem; /* Más espacio entre tarjetas en desktop */
      max-width: 100%; /* Asegurar que no se desborde */
    }
    
    .info-card {
      /* Remover min-width fijo para permitir flexibilidad */
      width: 100%; /* Usar todo el espacio disponible del grid */
      padding: 1.5rem; /* Más padding en desktop */
    }
    
    .info-card-body p {
      white-space: normal; /* Permitir wrap normal en desktop */
      overflow: visible; /* Mostrar todo el contenido */
      text-overflow: initial; /* No usar ellipsis en desktop */
      font-size: 0.95rem; /* Tamaño normal en desktop */
      padding-left: 8px; /* Padding moderado para mejor legibilidad */
    }
    
    .about-info-container {
      padding: 3rem; /* Más padding en desktop */
      min-height: 550px; /* Altura mínima mayor en desktop */
    }
  }
  
  @media (max-width: 767px) {
    .info-card-body p {
      padding-left: 4px; /* Padding mínimo en móvil para máximo espacio */
      font-size: 0.9rem; /* Texto ligeramente más pequeño en móvil */
    }
    
    .info-card {
      padding: 0.6rem; /* Reducir aún más el padding de la tarjeta en móvil */
    }
  }

  @media (min-width: 992px) {
    .about-content {
      grid-template-columns: 1.3fr 1.2fr; /* Más equilibrado: más ancho para el texto "Sobre Mí" */
    }
    
    .about-info-container {
      max-width: none; /* Permitir que use todo el ancho disponible */
      width: calc(100% + 3rem); /* Más ancho en desktop */
      margin-left: -1.5rem; /* Centrar el contenedor expandido */
    }
    
    .about-text {
      padding: 2.5rem; /* Más padding para aprovechar el espacio adicional */
    }
    
    .about-details p {
      font-size: 1.1rem; /* Texto ligeramente más grande */
      line-height: 1.7; /* Mejor espaciado entre líneas */
    }
  }
  
  @media (min-width: 1200px) {
    .about-content {
      grid-template-columns: 1.4fr 1.3fr; /* Proporción más equilibrada en pantallas grandes */
      gap: 4rem; /* Más separación entre columnas */
    }
    
    .about-text {
      padding: 3rem; /* Aún más padding en pantallas grandes */
    }
    
    .about-intro {
      font-size: 1.7rem; /* Título más grande */
    }
    
    .about-details p {
      font-size: 1.15rem; /* Texto más grande para mejor legibilidad */
      line-height: 1.8; /* Espaciado óptimo entre líneas */
    }
    
    .about-info-container {
      padding: 3.5rem; /* Más padding horizontal en pantallas grandes */
      width: calc(100% + 4rem); /* Aún más ancho en pantallas muy grandes */
      margin-left: -2rem; /* Centrar el contenedor expandido */
    }
    
    .info-cards {
      gap: 2rem; /* Más espacio entre tarjetas en pantallas grandes */
    }
  }
</style>
