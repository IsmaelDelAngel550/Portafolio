<style>
  .about {
    background-color: rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  .about-intro {
    font-size: 1.5rem;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }

  .about-details p {
    margin-bottom: 1.2rem;
    font-size: 1.05rem;
  }

  .about-text {
    background: rgba(74, 59, 145, 0.05);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    border-left: 4px solid var(--accent-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .about-text:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }

  /* Estilos para las tarjetas de información */
  .about-info-container {
    background: rgba(74, 59, 145, 0.05);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  .info-section-title {
    font-size: 1.4rem;
    color: var(--accent-color);
    margin-bottom: 2rem;
    text-align: center;
    position: relative;
  }
  
  .info-section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 3px;
  }

  .info-cards {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .info-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    padding: 1rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-left: 3px solid var(--accent-color);
  }
  
  .info-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 0.08);
  }

  .info-card-header {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .info-icon {
    width: 24px;
    height: 24px;
    margin-right: 10px;
    color: var(--accent-color);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .info-icon svg {
    width: 100%;
    height: 100%;
  }

  .info-card-header h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--accent-color);
    margin: 0;
  }

  .info-card-body p {
    margin: 0;
    padding-left: 34px; /* Alineado con el texto del encabezado */
    font-size: 0.95rem;
  }

  .info-value {
    color: var(--text-color);
  }

  @media (min-width: 768px) {
    .info-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 992px) {
    .about-content {
      grid-template-columns: 1.5fr 1fr;
    }
  }
</style>
