<style>
  .experience {
    background-color: var(--background-color);
    position: relative;
  }

  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    width: 2px;
    background-color: var(--primary-color);
    top: 0;
    bottom: 0;
    left: 0;
    margin-left: 7px;
    opacity: 0.4;
  }

  .timeline-category {
    font-size: 1.5rem;
    margin: 2.5rem 0 1.5rem 2rem;
    color: var(--primary-color);
    position: relative;
  }

  .timeline-category::before {
    content: '';
    position: absolute;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--secondary-color);
    left: -2rem;
    top: 50%;
    transform: translateY(-50%);
  }

  .timeline-item {
    padding-left: 2rem;
    position: relative;
    margin-bottom: 2.5rem;
  }

  .timeline-dot {
    position: absolute;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--accent-color);
    left: 0;
    top: 0.5rem;
    transform: translateX(50%);
    z-index: 2;
    box-shadow: 0 0 0 4px rgba(106, 90, 205, 0.1);
  }

  .timeline-content {
    padding: 1.5rem;
    background-color: rgba(74, 59, 145, 0.1);
    border-radius: 0.5rem;
    border-left: 3px solid var(--primary-color);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .timeline-content:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .date {
    display: inline-block;
    padding: 0.3rem 1rem;
    background-color: var(--primary-color);
    color: white;
    border-radius: 20px;
    font-size: 0.9rem;
    margin-bottom: 0.8rem;
  }

  .title {
    font-size: 1.2rem;
    margin-bottom: 0.8rem;
    color: var(--text-color);
  }

  .description {
    color: rgba(248, 248, 255, 0.8);
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.6;
  }
  
  /* Estilos para proyectos con imágenes */
  .project-card {
    padding: 1.2rem;
  }
  
  .project-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }
  
  .project-image {
    position: relative;
    overflow: hidden;
    border-radius: 0.5rem;
    height: 200px;
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    border-radius: 0.5rem;
  }
  
  .timeline-content:hover .project-image img {
    transform: scale(1.05);
  }
  
  .project-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .project-links {
    display: flex;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: rgba(106, 90, 205, 0.3);
    color: var(--text-color);
    border-radius: 20px;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .project-link:hover {
    background-color: var(--primary-color);
    transform: translateY(-3px);
  }
  
  .project-link svg {
    width: 1rem;
    height: 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.3rem 0.8rem;
    background-color: rgba(106, 90, 205, 0.2);
    border-radius: 20px;
    font-size: 0.8rem;
    color: var(--text-color);
  }

  @media (min-width: 768px) {
    .project-content {
      flex-direction: row;
      align-items: flex-start;
    }
    
    .project-image {
      width: 40%;
      height: 220px;
    }
    
    .project-details {
      width: 60%;
    }
  }

  @media (max-width: 768px) {
    .timeline::before {
      left: 15px;
    }

    .timeline-category {
      margin-left: 2.5rem;
      font-size: 1.3rem;
    }

    .timeline-category::before {
      left: -2.5rem;
    }

    .timeline-item {
      padding-left: 2.5rem;
    }

    .timeline-dot {
      left: 15px;
      transform: translateX(0);
    }
    
    .project-image {
      height: 180px;
    }

    .title {
      font-size: 1.1rem;
    }

    .description {
      font-size: 0.9rem;
    }
    
    .project-links {
      flex-wrap: wrap;
    }
  }
  
  @media (max-width: 480px) {
    .project-card {
      padding: 1rem;
    }
    
    .project-image {
      height: 160px;
    }
    
    .project-link {
      padding: 0.4rem 0.8rem;
      font-size: 0.8rem;
    }
    
    .tags {
      gap: 0.3rem;
    }
  }
</style>
